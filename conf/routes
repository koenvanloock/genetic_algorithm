# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

GET     /runalgorithm               controllers.AlgorithmController.runAlgorithm

GET     /backpacks                  controllers.AlgorithmController.getBackpacksOfGeneration(generationNr: Option[Int], page: Option[Int], limit: Option[Int])
GET     /populationsize             controllers.AlgorithmController.getPopulationSize
GET     /generationsize             controllers.AlgorithmController.getGenerationSize
GET     /chartdata                  controllers.AlgorithmController.getChartData

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
